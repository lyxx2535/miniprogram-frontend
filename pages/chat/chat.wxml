<view class='view-page' style="height: 100vh;">
  <!-- <navbar page-name="{{pageName}}" show-home="{{false}}" show-back="{{false}}" 
  style="margin-top: -20rpx;"></navbar> -->
  <placeholder></placeholder>
  <view class="comments cu-chat" id="x_chat">
    <scroll-view scroll-y="{{true}}" scroll-with-animation='{{true}}' scroll-into-view="{{toBottom}}"
      style="width:100%;height:{{windowHeight}}px;"
      refresher-enabled="{{true}}"
      refresher-threshold="{{200}}"
      refresher-default-style="black"
      refresher-triggered="{{triggered}}"
      bindrefresherpulling="onPulling"
      bindrefresherrefresh="onRefresh"
      bindrefresherrestore="onRestore"
      bindrefresherabort="onAbort"
      >
      <view wx:for="{{list}}" wx:key="index" id="item{{index + 1}}">
        <view wx:if="{{item.isShowTime}}" class='messageTime'>{{item.sendTime}}</view>
        <view class="cu-item self" wx:if="{{item.senderId == senderId}}">
          <view class="main">
          <!-- 小菊花 -->
            <text wx:if="{{item.receiverId != null}}" class="iconfont icon-sending sending"></text>
            <view class="bg-green content  shadow">
                <block wx:key="index" >
                  <block>{{item.content}}</block>
                </block>
              </view>
          </view>
          <image class="cu-avatar" style="border-radius: 50%;" src="{{sendAvatar}}"/>
        </view>
        <view class="cu-item"  wx:if="{{item.senderId != senderId}}">
          <image class="cu-avatar" style="border-radius: 50%;" src="{{receiveAvatar}}"/>
          <view class="main">
            <view class="bg-white content shadow">
                <block wx:key="index">
                  <block >{{item.content}}</block>
                </block>
              </view>
          </view>
        </view>
      </view>
      <view id="bottom" style="height:{{paddingBottom}}px"></view>
    </scroll-view>
  </view>
  
  <view class="reply_wrp" style="bottom: 0px">
  <view class="reply_tool positionfixed" style="bottom: {{keyboardHeight}}px; height: 50px;">
	<view style="position: relative;width: 100%;">
		<view style="display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-align: center;-webkit-align-items: center;align-items: center;font-size: 0;width:100%;padding: 8px 0px;background-color: #F9F9F9;">
			<view class="reply_form_wrp" >
			  <label for="" class="reply_label">
        <!-- 输入框 -->
			    <textarea
			      style="height:30px"
			      class="reply_input"
			      confirm-type="send"
			      show-confirm-bar="{{false}}"
			      confirm-hold value="{{comment}}"
			      cursor="{{cursor}}"
			      cursor-spacing="90rpx"
            adjust-position="{{false}}"
			      focus="{{focus}}"
			      bindblur="onBlur"
			      bindfocus="onFocus"
			      bindinput="onInput"
			      bindconfirm="onConfirm"
			    ></textarea>
			  </label>
			</view>
			<!-- <view hover-class="active" class="reply_button replay_emotion_button" bindtap="showEmoji">
			  <image src="./images/reply_tool_emoji.svg" mode='aspectFit' class="reply_tool_pic"></image>
			</view> -->
			<!-- <view hover-class="active" class="reply_button replay_media_button" bindtap="showFunction">
			  <image src="https://s1.ax1x.com/2022/04/19/LBDRAO.png" mode='aspectFit' class="reply_tool_pic"></image>
			</view> -->
      <view>
        <image src="https://s1.ax1x.com/2022/04/19/LBDbHf.png" mode='aspectFit' class="reply_button replay_media_button" style="margin-right: 20rpx;" bindtap="onConfirm"></image>
      </view>
		</view>
	</view>
  </view>
  <!-- <view class="reply_panel_wrp" style="height: {{emojiShow ? 300 : 200}}px;" hidden="{{!emojiShow && !functionShow}}">
