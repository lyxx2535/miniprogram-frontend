/* pages/my/my.wxss */
page{
  background-color: #f3f3f5;
}
.header{ 
  display: inline-block;
  white-space: nowrap; /* 内容超出不换行 */
  color: #999999;
  font-size: 26rpx;
  margin-top: 40rpx;
  margin-left: 510rpx;  
  border-bottom: solid 2rpx #999999;
}
.user-avartar{
  margin-left: 20rpx;
  height: 80%;
  border-radius: 50%;
  margin-top: 8rpx;
}
.user-info{
  margin-top: 18rpx;
  margin-left: 40rpx;
}
.card {
  margin-top: 50rpx;
  border-radius: 15rpx;
  /* 阴影弄不准确555 */
  box-shadow: 1rpx 1rpx 10rpx 0rpx rgb(211, 211, 211);
  background-color: #ededef;
  width: 85%;
  margin-left: 7.5%;
}
.card-text{
  font-size: 35rpx;
  font-weight: bold;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-left: 50rpx;
  letter-spacing: 4rpx;
}
.icon{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  width: 50rpx;
  margin-left: 350rpx;
}
.info-text{
  margin-top: 35rpx; 
  font-size: 25rpx; 
  letter-spacing: 2rpx;
}
.big-card {
  margin-top: 50rpx;
  border-radius: 15rpx;
  /* 阴影弄不准确555 */
  border: solid 1rpx #d9d9d9;
  background-color: #ededef;
  width: 85%;
  margin-left: 7.5%;
}
.divide-line {
  background-color: #d9d9d9;
  width: 100%;
  height: 5rpx;
  transform: scaleY(0.3)
}
.big-card-text{
  margin-left: 50rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 35rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}
.big-card-text2{
  margin-left: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 25rpx;
  font-weight: lighter;
  color: #7f7f7f;
  letter-spacing: 8rpx;
}