/* pages/list/list.wxss */
page{
  background-color: #f2f2f4;
}

.container{
  padding:0px;
}
.page-header {
  display: flex;
  justify-content: center;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
}
.page-body {
  width: 100%;
  display: flex;
  flex: 1;
  flex-direction: column;
}
.item {
  display: flex;
  padding: 10rpx 40rpx;
  border-bottom: 0.01rem solid rgba(239,239,239,1);

  cursor: pointer;
  
}
.item::after {
  content: ' ';
  width:73%;
  height: 120rpx;
  display: block;
  margin-left: 120rpx;
  border-bottom: 1px solid rgb(214, 214, 214);
  position: absolute;
}
.item .poster {
  width: 95rpx;
  height: 95rpx;
  margin-right: 29rpx;
  border-radius: 10rpx;
  
}
.item .meta {
  flex: 1;
}
.item .meta .title,.item .meta .sub-title {
  display: block;
  margin-bottom: 15rpx;
}
.item .meta .title {
  font-size: 38rpx;
}
.item .meta .sub-title {
  font-size: 22rpx;
  color: #999;
  letter-spacing: 2rpx;
}
.unread{
  border-radius: 100%;
  width: 40rpx;
  height: 40rpx;
  font-size: smaller;
  font-weight: 500;
  background-color: #f74c30;
  color: white;
  text-align: center;
  line-height: normal;
}

.user_name {
  font-size: 30rpx;
  letter-spacing: 2rpx;

}

.msg_time {
  color: #999;
  font-size: 22rpx;
  margin-top: 8rpx;
  letter-spacing: 2rpx;
}

