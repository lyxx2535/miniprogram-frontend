/* 卡片部分CSS */
.card {
  border-radius: 25rpx;
  /* 阴影弄不准确555 */
  box-shadow: 2rpx 2rpx 5rpx 0rpx rgb(122, 122, 122);
  background-color: #ffffff;
  width: 94%;
  margin-left: 3%;
}
.divide_line{
  background: linear-gradient(
    to left,
    transparent 0%,
    transparent 50%,
    #000000 50%,
    #000000 100%
  );
  background-size: 10px 1px;
  background-repeat: repeat-x;
  margin-top: 20px;
  width: 96%;
  margin-left: 2%;
  height: 2rpx;
  margin-bottom: 10px;
}
.btn {
  border-radius: 40px;
  height: 80rpx;
}
.btn:not([size="mini"]) {
  position: relative;
  margin-left: 50px;
  margin-top: 40rpx;
  width: 240rpx;
  text-align: center;
  justify-content: center;
}
.wx-switch-input{width:42px !important;height:22px !important;}
.wx-switch-input::before{width:40px !important;height: 20px !important;}
.wx-switch-input::after{width: 18px !important;height: 18px !important;}

/* 开启提醒 弹出表单CSS */
 .drawer_screen { 
  width: 100%; 
  height: 100%; 
  position: fixed; 
  top: 0; 
  left: 0; 
  z-index: 1000; 
  background: #000; 
  opacity: 0.5; 
  overflow: hidden; 
 } 
   
 /*content*/
 .drawer_box { 
  width: 650rpx; 
  overflow: hidden; 
  position: fixed; 
  top: 50%; 
  left: 0; 
  z-index: 1001; 
  background: #FAFAFA; 
  margin: -150px 50rpx 0 50rpx; 
  border-radius: 3px; 
 } 
   
 .drawer_title{ 
  padding:15px; 
  font: 20px "microsoft yahei"; 
  text-align: center; 
 } 
 .drawer_content { 
  height: 210px; 
  overflow-y: scroll; /*超出父盒子高度可滚动*/
 } 
   
 .btn_ok{ 
  padding: 10px; 
  font: 20px "microsoft yahei"; 
  text-align: center; 
  border-top: 1px solid #E8E8EA; 
  color: #3CC51F; 
 } 
   
